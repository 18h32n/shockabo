# Kaggle API Credentials
# Get from: https://www.kaggle.com/account (Create New API Token)
KAGGLE_USERNAME=your-kaggle-username
KAGGLE_KEY=your-kaggle-api-key

# Weights & Biases API Credentials  
# Get from: https://wandb.ai/settings (API Keys section)
WANDB_API_KEY=your-wandb-api-key
WANDB_ENTITY=your-wandb-username

# Project Configuration
WANDB_PROJECT=arc-prize-2025

# Application settings
APP_NAME=arc-prize-2025
APP_VERSION=0.1.0
DEBUG=true
LOG_LEVEL=INFO

# ============================================================================
# PLATFORM-SPECIFIC CONFIGURATION
# ============================================================================

# Platform override (kaggle, colab, paperspace, local)
# Leave empty for auto-detection
PLATFORM_OVERRIDE=

# Kaggle Configuration
KAGGLE_USERNAME=
KAGGLE_KEY=
KAGGLE_KERNEL_RUN_TYPE=

# Google Colab Configuration
COLAB_GPU=
GOOGLE_APPLICATION_CREDENTIALS=

# Paperspace Configuration
PS_API_KEY=
PS_MACHINE_ID=

# ============================================================================
# API CONFIGURATION
# ============================================================================

# FastAPI Configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_RELOAD=true
FASTAPI_WORKERS=1

# WebSocket Configuration
SOCKETIO_HOST=0.0.0.0
SOCKETIO_PORT=8001
SOCKETIO_CORS_ALLOWED_ORIGINS=*

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# SQLite Configuration
DATABASE_URL=sqlite:///./data/arc_prize.db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ChromaDB Configuration (Vector Store)
CHROMADB_HOST=localhost
CHROMADB_PORT=8000
CHROMADB_COLLECTION_NAME=arc_embeddings

# Cache Configuration
CACHE_TYPE=diskcache
CACHE_DIR=./data/cache
CACHE_SIZE_LIMIT=1GB
CACHE_TTL=3600

# ============================================================================
# AI/ML MODEL CONFIGURATION
# ============================================================================

# Base Model Configuration
MODEL_NAME=llama-3-8b
MODEL_QUANTIZATION=true
MODEL_DEVICE=auto
MODEL_MAX_LENGTH=2048
MODEL_BATCH_SIZE=32

# Training Configuration
TRAINING_EPOCHS=10
TRAINING_LEARNING_RATE=1e-4
TRAINING_BATCH_SIZE=8
TRAINING_GRADIENT_ACCUMULATION=4

# Inference Configuration
INFERENCE_BATCH_SIZE=16
INFERENCE_MAX_TOKENS=512
INFERENCE_TEMPERATURE=0.7
INFERENCE_TOP_P=0.9

# ============================================================================
# EXTERNAL API CONFIGURATION
# ============================================================================

# OpenRouter API (for external model access)
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Anthropic API (for Claude models)
ANTHROPIC_API_KEY=
ANTHROPIC_BASE_URL=https://api.anthropic.com

# Hugging Face Hub (for model downloads)
HUGGINGFACE_API_TOKEN=
HUGGINGFACE_CACHE_DIR=./data/models

# ============================================================================
# MONITORING AND LOGGING
# ============================================================================

# Structured Logging
LOG_FORMAT=json
LOG_FILE=./logs/arc_prize.log
LOG_ROTATION=daily
LOG_RETENTION=7

# Prometheus Metrics
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Performance Monitoring
PROFILING_ENABLED=false
PROFILING_OUTPUT_DIR=./data/profiles

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================

# Hot Reload Configuration
HOT_RELOAD_ENABLED=true
HOT_RELOAD_PATTERNS=*.py,*.yaml,*.json

# Testing Configuration
TEST_DATABASE_URL=sqlite:///./data/test_arc_prize.db
TEST_CACHE_DIR=./data/test_cache
TEST_PARALLEL=true
TEST_COVERAGE_MIN=80

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# JWT Authentication Configuration
JWT_SECRET_KEY=your-256-bit-secret-key-here-replace-in-production
JWT_ALGORITHM=RS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_ISSUER=arc-evaluation-system
JWT_AUDIENCE=arc-evaluation-api

# CORS Configuration
CORS_ALLOW_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# Rate Limiting Configuration for DoS Protection
RATE_LIMIT_ENABLED=true
RATE_LIMIT_USE_REDIS=false

# Evaluation API Rate Limits (most restrictive - handles model inference)
RATE_LIMIT_EVALUATION_RPM=100        # Requests per minute
RATE_LIMIT_EVALUATION_RPH=1000       # Requests per hour
RATE_LIMIT_EVALUATION_BURST=10       # Burst capacity

# Dashboard API Rate Limits (more permissive for UI)
RATE_LIMIT_DASHBOARD_RPM=1000        # Requests per minute
RATE_LIMIT_DASHBOARD_RPH=10000       # Requests per hour
RATE_LIMIT_DASHBOARD_BURST=50        # Burst capacity

# Authentication API Rate Limits (very restrictive)
RATE_LIMIT_AUTH_RPM=20               # Requests per minute
RATE_LIMIT_AUTH_RPH=200              # Requests per hour

# WebSocket Connection Limits
RATE_LIMIT_WS_CONNECTIONS=5          # Max concurrent connections per IP

# Redis Configuration (for production rate limiting)
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# RESOURCE LIMITS
# ============================================================================

# Memory Limits
MAX_MEMORY_USAGE_GB=8
MAX_MODEL_MEMORY_GB=4
MEMORY_WARNING_THRESHOLD=0.8

# Processing Limits
MAX_CONCURRENT_TASKS=4
MAX_PROCESSING_TIME_SECONDS=300
MAX_QUEUE_SIZE=100

# GPU Configuration
GPU_MEMORY_FRACTION=0.8
GPU_ALLOW_GROWTH=true

# ============================================================================
# DATA PATHS
# ============================================================================

# Data Directories (platform-specific paths will be auto-detected)
DATA_DIR=./data
INPUT_DIR=./data/tasks
OUTPUT_DIR=./output
MODELS_DIR=./data/models
CACHE_DIR=./data/cache
LOGS_DIR=./logs

# ARC Dataset Paths
ARC_TRAINING_PATH=./data/tasks/arc-training.json
ARC_EVALUATION_PATH=./data/tasks/arc-evaluation.json
ARC_TEST_PATH=./data/tasks/arc-test.json

# ============================================================================
# EXPERIMENTAL FEATURES
# ============================================================================

# Feature Flags
ENABLE_TTT_TRAINING=false
ENABLE_PROGRAM_SYNTHESIS=false
ENABLE_EVOLUTION_ENGINE=false
ENABLE_IMITATION_LEARNING=false

# Experiment Tracking
EXPERIMENT_TRACKING_ENABLED=false
EXPERIMENT_TRACKING_URL=
EXPERIMENT_TRACKING_PROJECT=arc-prize-2025

# Advanced Features
ENABLE_TIME_DILATION=false
ENABLE_CIRCUIT_BREAKER=true
ENABLE_BUDGET_CONTROLLER=true

# ============================================================================
# PLATFORM-SPECIFIC OVERRIDES
# ============================================================================

# These will be automatically set based on platform detection
# but can be manually overridden if needed

# Kaggle-specific
KAGGLE_DATA_DIR=/kaggle/input
KAGGLE_WORKING_DIR=/kaggle/working
KAGGLE_GPU_LIMIT=30

# Colab-specific
COLAB_DATA_DIR=/content/data
COLAB_OUTPUT_DIR=/content/output
COLAB_GPU_LIMIT=12

# Paperspace-specific
PAPERSPACE_DATA_DIR=/storage/data
PAPERSPACE_OUTPUT_DIR=/storage/output
PAPERSPACE_GPU_LIMIT=6

# ============================================================================
# SECURITY NOTES
# ============================================================================

# Security Notes:
# - Never commit .env file to git
# - Keep API keys private and secure  
# - Rotate keys if compromised
# - Use environment-specific .env files (.env.local, .env.prod)
